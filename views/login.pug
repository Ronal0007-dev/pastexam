html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/login.css')
  body.dark-mode
    // Theme switcher
    button#themeSwitcher.theme-switcher
    .container
      // Header Section
      .login-header
        h1  LOGIN FORM
      // Login Form
      form#loginForm.login-form
        .svgContainer
          #svgWrapper.svgWrapper
            // SVG will be injected here
        .inputGroup
          input#email(type="text", placeholder="Username", required)
        .inputGroup
          .password-group(style="position: relative;")
            input#password(type="password", placeholder="Password", required)
            // Password toggle button
            button#togglePassword.password-toggle(type="button", aria-label="Toggle password visibility", style="position: absolute; top: 50%; right: 1em; transform: translateY(-50%); background: none; border: none; padding: 0; cursor: pointer;")
              // Hidden password icon SVG (click to reveal)
              svg(viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                g(id="SVGRepo_bgCarrier", stroke-width="0")
                g(id="SVGRepo_tracerCarrier", stroke-linecap="round", stroke-linejoin="round")
                g(id="SVGRepo_iconCarrier")
                  path(d="M4 10C4 10 5.6 15 12 15M12 15C18.4 15 20 10 20 10M12 15V18M18 17L16 14.5M6 17L8 14.5", stroke="#464455", stroke-linecap="round", stroke-linejoin="round")
        .inputGroup
          button.btn#loginButton(type="submit", style="margin: 0 auto;") LOG IN
        //- .signup-link
        //-   p Don't have an account?
